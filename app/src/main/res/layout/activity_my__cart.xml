<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:layout_editor_absoluteY="25dp">


    <include
        android:id="@+id/include"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chekout"
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:textColor="#fff"
        android:background="@drawable/btnborder"
        android:text="Check out"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="444dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="170dp"
        android:layout_height="56dp"

        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
android:background="@drawable/blkborder"
        android:padding="2dp"
        android:text="Grand Total:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/chekout"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/g_price"
        android:layout_width="166dp"
        android:layout_height="56dp"


        android:layout_marginBottom="8dp"
        android:background="@drawable/blkborder"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#000"
        app:layout_constraintBottom_toTopOf="@+id/chekout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toEndOf="@+id/textView5" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/model_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

    </android.support.v7.widget.RecyclerView>

    <include
        android:id="@+id/include"
        layout="@layout/toolbarr"
        tools:layout_editor_absoluteX="0dp" />


</android.support.constraint.ConstraintLayout>
